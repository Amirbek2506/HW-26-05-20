@model MiniInternetMagazin.Models.GroceryStoreViewModels.Product
@{
    ViewData["Title"] = "Create";
}
    <h4 class="text-info">Добавить новый продукт</h4>
    <form method="post" action="~/Products/Create">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <label for="ProductName">Имя продукт</label><br />
                    <input asp-for="ProductName" type="text" class="form-control" placeholder="Новая продукт" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <label for="Price">Цена</label><br />
                    <input asp-for="Price" type="number" class="form-control" placeholder="" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="submit" class="btn btn-primary" value="Добавить" />
                </div>
            </div>
        </div>
    </form>